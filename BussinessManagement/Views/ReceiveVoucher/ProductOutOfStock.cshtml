@using BussinessManagement.Models;
@model IEnumerable<Product>
@{
    ViewBag.Title = "ProductOutOfStock";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}

<h2>Product is out of stock</h2>
<br />
<hr />
@grid.GetHtml(tableStyle: "gridTable",
    headerStyle: "gridHeader",
    footerStyle: "gridFooter",
    rowStyle: "gridRows",
    alternatingRowStyle: "gridAltRows",
    columns: grid.Columns(
    grid.Column("Name", "Name"),
    grid.Column("Image", "Image", format: p => Html.Raw("<img width=\"50\" height=\"50\" src=\"../Content/ProductImage/" + p.Image + "\">")),
    grid.Column(format: p => Html.ActionLink("Import", "ImportProductSingle", new { id = p.ID }, new { @target = "blank", @class="btn btn-primary" }))
))
<link href="~/Content/admin/css/style-grid.css" rel="stylesheet" />