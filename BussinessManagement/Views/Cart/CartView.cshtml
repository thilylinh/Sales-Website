@using BussinessManagement.Models.ViewModel;
@model List<ItemCart>
@{
    ViewBag.Title = "CartView";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

@if (Model == null)
{
    <h3 class="text-center">Cart is empty</h3>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("ID")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Image")
            </th>
            <th>
                @Html.DisplayName("Price")
            </th>
            <th>
                @Html.DisplayName("Amount")
            </th>
            <th>
                @Html.DisplayName("Total Money")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    <img src="@Url.Content("~/Content/ProductImage/"+item.Image)" style="height:50px;width:50px;" />
                </td>
                <td>
                    @item.Price.ToString("#,##") VND
                </td>
                <td>
                    @item.Amount
                </td>
                <td>
                    @item.TotalMoney.ToString("#,##") VND
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCart", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "DeleteCart", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
    <div class="text-center">
        @using (Html.BeginForm("Order", "Cart"))
        {
        <input type="submit" value="order" class="btn-success" />
        }
    </div>
   
}