@using BussinessManagement.Models;
@model IEnumerable<TheOrderDetail>
@{
    ViewBag.Title = "Cancel";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}

@grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
            grid.Column("ProductName", header: "Product Name"),
        grid.Column("Amount", header: "Quantity"),
        grid.Column("Price", header: "Price")
        //grid.Column(format: p => Html.ActionLink("Cancel", "OrderUser", new { id = p.ID }, new { @class = "btn btn-danger" }))
        ))
    
<div>
    @using (Html.BeginForm("Cancel","OrderUser"))
    {
        <input type="submit" value="Cancel" class="btn btn-success"/>
    }
</div>
<link href="~/Content/admin/css/style-grid.css" rel="stylesheet" />

