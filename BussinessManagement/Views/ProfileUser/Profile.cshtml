@using BussinessManagement.Models;
@model Customer

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}
@if (Session["Customer"] != null)
{
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12" style="background-color:darkorange; padding:2px;">
                <h1 class="page-title text-center">Profile page</h1>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4 col-xs-12">
                <div class="white-box">
                    <div class="user-bg">
                        <div class="overlay-box">
                            <div class="user-content">
                                <h4 class="text-white">@Model.Name</h4>
                                <h5 class="text-white">@Model.Email</h5>
                                <h5 class="text-white">@Model.PhoneNumber</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-xs-12">
                <div class="white-box">
                    @using (Html.BeginForm("EditProfile", "ProfileUser", FormMethod.Post, new { @class = "form-horizontal form-material" }))
                    {
                        @Html.HiddenFor(n=>n.ID)
                        <div class="form-group">
                            <label class="col-md-12">Full Name</label>
                            <div class="col-md-12">
                                @Html.EditorFor(n => n.Name, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12">Address</label>
                            <div class="col-md-12">
                                @Html.EditorFor(n => n.Address, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Email</label>
                            <div class="col-md-12">
                                @Html.EditorFor(n => n.Email, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Phone No</label>
                            <div class="col-md-12">
                                @Html.EditorFor(n => n.PhoneNumber, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Account</label>
                            <div class="col-md-12">
                                @Html.EditorFor(n => n.Account, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Password</label>
                            <div class="col-md-12">
                                @Html.PasswordFor(n => n.Pass, new { @class = "form-control form-control-line" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button class="btn btn-success">Update Profile</button>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
}
else
{
    <h5 class="text-center text-danger">Please login to see profile</h5>
}