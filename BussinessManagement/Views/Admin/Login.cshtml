@using BussinessManagement.Models;
@model Member
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-page login-page ">
    <h3 class="title1">SignIn Page</h3>
    <div class="widget-shadow">
        <div class="login-top">
            <h4>Welcome back to New Shop AdminPanel ! </h4>
        </div>
        <div class="login-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    @Html.LabelFor(m => m.Account)
                    @Html.TextBoxFor(m => m.Account, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Account, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <input value="Login" type="submit" />
            }
        </div>
    </div>
</div>
<script>
    $("#cbp-spmenu-s1").hide();
</script>

