                    </div>
                    <div class="clearfix"> </div>
                </div>

                <h5 class="item_price">@Model.Price VND</h5>
                <p>
                    @Model.Config
                </p>
                <a href="#" class="add-cart item_add">ADD TO CART</a>
            </div>
        </div>
        <div class="clearfix"> </div>
