@using BussinessManagement.Models;
@model IEnumerable<Product>
<div class=" rsidebar span_1_of_left">
    <div class="of-left">
        <h3 class="cate">Categories</h3>
    </div>
    <ul class="menu">
        foreach (var GroupNameType in Model.GroupBy(n => n.ProductType))
        {
            <li class="item1">
                <a href="@Url.Action("ViewAllProduct","Product",new { @typeProductID=GroupNameType.Key.ID})">@GroupNameType.Key.NameTypeProdcut </a>
                <ul class="cute">
                    @foreach (var item in GroupNameType.GroupBy(n => n.Producer))
                    {
                        <li class="subitem1"><a href="@Url.Action("ViewDetailProduct","Product", new {@productTypeID = GroupNameType.Key.ID , @producerID= item.Key.ID })">@item.Key.Name </a></li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>
